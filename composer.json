{
    "name": "qweb/exception-handling",
    "description": "Exception Handling Package For Laravel Framework",
    "authors": [
        {
            "name": "Erol Uysal",
            "email": "eutkuuysal@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "QweB\\Exception\\": "src"
        }
    },
    "require": {
        "illuminate/log": "5.0.*",
        "illuminate/support": "5.0.*"
    },
    "require-dev": {
        "phpunit/phpunit": "5.0.*",
        "mockery/mockery": "1.0.*",
        "bugsnag/bugsnag": "2.5.*",
        "raven/raven": "0.11.*"
    },
    "suggest": {
        "bugsnag/bugsnag-php": "Required to use the Bugsnag driver (~2.0).",
        "raven/raven": "Required to use the Sentry driver (~0.11)."
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "minimum-stability": "dev"
}
